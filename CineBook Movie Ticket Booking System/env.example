# Server Configuration
NODE_ENV=development
PORT=3002
API_VERSION=v1

# Database Configuration (PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/cinebook_db?schema=public"

# JWT Configuration
JWT_ACCESS_SECRET=cinebook-access-secret-change-in-production
JWT_REFRESH_SECRET=cinebook-refresh-secret-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Booking Configuration
BOOKING_LOCK_MINUTES=10
MAX_SEATS_PER_BOOKING=10
CONVENIENCE_FEE_PERCENT=2.5
TAX_PERCENT=18

# Security
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000
